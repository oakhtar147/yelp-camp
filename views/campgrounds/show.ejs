<% layout('layouts/boilerplate') -%>


<div class="row">
    <div class="col-md-6 mb-5">
        <div class="card">
            <img
              src="<%= campground.image %>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="text-muted"><%= campground.location %></p>
                <p class="text-muted">Submitted by: <%= campground.author.username %></p>
                <p>$<%= campground.price %> per night</p>
                <p class="card-text"><%= campground.description %></p>
                <% if(currentUser && campground.author.equals(currentUser._id)) { %> 
                    <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-info">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method=POST>
                        <button class="btn btn-danger">Delete</button>
                    </form>
                <% } %> 
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-5">
            <% if(!currentUser) { %>
                <h3>Sign in to leave a review</h3> 
                <hr>
                <% } else { %> 
                <h3>Reviews</h3>
                <hr>
                <h5>Let us know about this campground.</h5>
                <form class="mb-3" action="/campgrounds/<%=campground._id%>/reviews" method=POST>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" class="form-range" name="review[rating]" min="1" max="5" id="rating">
                    </div>
                    <div class="mb-3">
                        <label for="body" class="form-label">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Submit</button>
                    </div>
                </form>
            <% } %> 
            <div class="mb-3">
            <% for(let review of campground.reviews) { %>
                <div class="card">
                    <div class="card-body">
                        <div class="card-title"><h4>Rating: <%= review.rating %></h4></div>   
                        <div class="card-subtitle text-muted mb-3">By <%= review.author.username %></div>   
                        <div class="card-text"><p>Review: <%= review.body %></p></div> 
                        <% if(currentUser && review.author.equals(currentUser._id)) { %> 
                        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method=POST>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <% } %> 
                    </div>
                </div>
            <% } %>     
            </div>
        </div>
        </div>
    </div>
</div>
